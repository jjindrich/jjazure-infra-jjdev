{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "profileName": {
            "type": "string"
        },
        "endpointName": {
            "type": "string"
        },
        "wafPolicyName": {
            "type": "string"
        }
    },
    "variables": {
        "originGroupName": "default-origin-group",
        "originName": "default-origin",
        "routeName": "default-route"
    },
    "resources": [
        {
            "apiVersion": "2020-09-01",
            "name": "[parameters('profileName')]",
            "type": "Microsoft.Cdn/Profiles",
            "location": "Global",
            "properties": {},
            "sku": {
                "name": "Standard_AzureFrontDoor"
            }
        },
        {
            "apiVersion": "2020-09-01",
            "name": "[concat(parameters('profileName'),'/',parameters('endpointName'))]",
            "type": "Microsoft.Cdn/Profiles/AfdEndpoints",
            "dependsOn": [
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'))]"
            ],
            "location": "Global",
            "properties": {
                "hostName": "[concat(parameters('endpointName'),'.z01.azurefd.net')]",
                "originResponseTimeoutSeconds": 60,
                "enabledState": "Enabled",
                "deploymentStatus": null
            }
        },
        {
            "apiVersion": "2020-09-01",
            "name": "[concat(parameters('profileName'),'/',variables('originGroupName'))]",
            "type": "Microsoft.Cdn/Profiles/OriginGroups",
            "dependsOn": [
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'))]"
            ],
            "properties": {
                "loadBalancingSettings": {
                    "sampleSize": 4,
                    "successfulSamplesRequired": 3,
                    "additionalLatencyInMilliseconds": 50
                },
                "healthProbeSettings": {
                    "probePath": "/",
                    "probeRequestType": "HEAD",
                    "probeProtocol": "Http",
                    "probeIntervalInSeconds": 100
                },
                "trafficRestorationTimeToHealedOrNewEndpointsInMinutes": null,
                "sessionAffinityState": "Disabled",
                "deploymentStatus": null
            }
        },
        {
            "apiVersion": "2020-09-01",
            "name": "[concat(parameters('profileName'),'/',parameters('endpointName'),'/',variables('routeName'))]",
            "type": "Microsoft.Cdn/Profiles/AfdEndpoints/Routes",
            "dependsOn": [
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'), '/afdEndpoints/', parameters('endpointName'))]"
            ],
            "properties": {
                "customDomains": [],
                "originGroup": {
                    "id": "[resourceId('Microsoft.Cdn/Profiles/originGroups', split(format('{0}/{1}', parameters('profileName'), variables('originGroupName')), '/')[0], split(format('{0}/{1}', parameters('profileName'), variables('originGroupName')), '/')[1])]"
                },
                "originPath": null,
                "ruleSets": [],
                "supportedProtocols": [
                    "Http",
                    "Https"
                ],
                "patternsToMatch": [
                    "/*"
                ],
                "compressionSettings": {
                    "contentTypesToCompress": [
                        "application/eot",
                        "application/font",
                        "application/font-sfnt",
                        "application/javascript",
                        "application/json",
                        "application/opentype",
                        "application/otf",
                        "application/pkcs7-mime",
                        "application/truetype",
                        "application/ttf",
                        "application/vnd.ms-fontobject",
                        "application/xhtml+xml",
                        "application/xml",
                        "application/xml+rss",
                        "application/x-font-opentype",
                        "application/x-font-truetype",
                        "application/x-font-ttf",
                        "application/x-httpd-cgi",
                        "application/x-javascript",
                        "application/x-mpegurl",
                        "application/x-opentype",
                        "application/x-otf",
                        "application/x-perl",
                        "application/x-ttf",
                        "font/eot",
                        "font/ttf",
                        "font/otf",
                        "font/opentype",
                        "image/svg+xml",
                        "text/css",
                        "text/csv",
                        "text/html",
                        "text/javascript",
                        "text/js",
                        "text/plain",
                        "text/richtext",
                        "text/tab-separated-values",
                        "text/xml",
                        "text/x-script",
                        "text/x-component",
                        "text/x-java-source"
                    ],
                    "isCompressionEnabled": true
                },
                "queryStringCachingBehavior": "UseQueryString",
                "forwardingProtocol": "Http",
                "linkToDefaultDomain": "Enabled",
                "httpsRedirect": "Enabled",
                "deploymentStatus": null
            }
        },
        {
            "apiVersion": "2020-09-01",
            "name": "[concat(parameters('profileName'), '/', variables('originGroupName'), '/', variables('originName'))]",
            "type": "Microsoft.Cdn/Profiles/OriginGroups/Origins",
            "dependsOn": [
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'), '/originGroups/', variables('originGroupName'))]"
            ],
            "properties": {
                "hostName": "jjaks.westeurope.cloudapp.azure.com",
                "httpPort": 80,
                "httpsPort": 443,
                "originHostHeader": "jjaks.westeurope.cloudapp.azure.com",
                "priority": 1,
                "weight": 1000,
                "sharedPrivateLinkResource": null,
                "enabledState": "Enabled",
                "deploymentStatus": null
            }
        },
        {
            "apiVersion": "2020-09-01",
            "type": "Microsoft.Cdn/Profiles/SecurityPolicies",
            "name": "[concat(parameters('profileName'),'/',parameters('wafPolicyName'))]",
            "dependsOn": [
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'))]",
                "[concat('Microsoft.Cdn/Profiles/', parameters('profileName'), '/afdEndpoints/', parameters('endpointName'))]"
            ],
            "properties": {
                "parameters": {
                    "type": "WebApplicationFirewall",
                    "wafPolicy": {
                        "id": "[resourceId('Microsoft.Network/frontdoorwebapplicationfirewallpolicies',parameters('wafPolicyName'))]"
                    },
                    "associations": [
                        {
                            "domains": [
                                {
                                    "id": "[resourceId('Microsoft.Cdn/Profiles/AfdEndpoints', split(format('{0}/{1}', parameters('profileName'), parameters('endpointName')), '/')[0], split(format('{0}/{1}', parameters('profileName'), parameters('endpointName')), '/')[1])]"
                                }
                            ],
                            "patternsToMatch": [
                                "/*"
                            ]
                        }
                    ]
                }
            }
        }
    ]
}