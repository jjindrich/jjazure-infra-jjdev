{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vpnGwName": {
            "type": "String"
        },
        "vpnGwSku": {
            "type": "String"
        },
        "vpnGwPublicIpName": {
            "type": "String"
        },
        "vpnGwPublicIpSku": {
            "type": "String"
        },
        "vpnGwPublicIpAllocation": {
            "type": "String"
        },
        "vpnGwLocalName": {
            "type": "string"
        },
        "vpnGwLocalIp": {
            "type": "string"
        },
        "vpnGwConnectionName": {
            "type": "string"
        },
        "vpnGwConnectionKey": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "erGwDeploy": {
            "type": "bool"
        },
        "erGwName": {
            "type": "String"
        },
        "erGwPublicIpName": {
            "type": "String"
        }
    },
    "variables": {
        "vpnGwPublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('vpnGwPublicIpName'))]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "erGwPublicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('erGwPublicIpName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-05-01",
            "name": "[parameters('vpnGwPublicIpName')]",
            "location": "[resourceGroup().location]",
            "tags": {},
            "sku": {
                "name": "[parameters('vpnGwPublicIpSku')]"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "[parameters('vpnGwPublicIpAllocation')]",
                "idleTimeoutInMinutes": 4,
                "ipTags": [
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2020-05-01",
            "name": "[parameters('vpnGwName')]",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('vpnGwPublicIpName'))]"
            ],
            "properties": {
                "enablePrivateIpAddress": false,
                "ipConfigurations": [
                    {
                        "name": "default",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[variables('vpnGwPublicIpId')]"
                            },
                            "subnet": {
                                "id": "[concat(variables('vnetId'), '/subnets/GatewaySubnet')]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "[parameters('vpnGwSku')]",
                    "tier": "[parameters('vpnGwSku')]"
                },
                "gatewayType": "Vpn",
                "vpnGatewayGeneration": "Generation1",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "activeActive": false,
                "vpnClientConfiguration": {
                    "vpnClientAddressPool": {
                        "addressPrefixes": [
                            "172.16.1.0/24"
                        ]
                    },
                    "vpnClientProtocols": [
                        "SSTP"
                    ],
