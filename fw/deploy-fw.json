{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azureFirewallName": {
            "type": "string"
        },
        "availabilityZones": {
            "type": "array",
            "defaultValue": [
                "1",
                "2",
                "3"
            ],
            "metadata": {
                "description": "Zone numbers e.g. 1,2,3."
            }
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "publicIpAddress": {
            "type": "string"
        },
        "publicIpPrefix": {
            "type": "string"
        },
        "routeTablesName": {
            "type": "String"
        },
        "routeTablesNameVpn": {
            "type": "String"
        },
        "routeTablesNameAppGw": {
            "type": "String"
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "publicIpId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpAddress'))]",
        "publicIpPrefixId": "[resourceId('Microsoft.Network/publicIPPrefixes', parameters('publicIpPrefix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-09-01",
            "name": "[parameters('publicIpAddress')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[parameters('azureFirewallName')]"
                },
                "ipTags": [
                ],
                "publicIPPrefix": {
                    "id": "[variables('publicIpPrefixId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2019-07-01",
            "name": "[parameters('routeTablesName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableBgpRoutePropagation": false,
                "routes": [
                    {
                        "name": "InternetToFw",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "JJDEVBR1toFw",
                        "properties": {
                            "addressPrefix": "10.1.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "AppToFw",
                        "properties": {
                            "addressPrefix": "10.4.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "HubToFw",
                        "properties": {
                            "addressPrefix": "10.3.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2019-07-01",
            "name": "[parameters('routeTablesNameVpn')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableBgpRoutePropagation": false,
                "routes": [
                    {
                        "name": "HubToFw",
                        "properties": {
                            "addressPrefix": "10.3.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "AppToFw",
                        "properties": {
                            "addressPrefix": "10.4.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    }

                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2019-07-01",
            "name": "[parameters('routeTablesNameAppGw')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableBgpRoutePropagation": false,
                "routes": [
                    {
                        "name": "JJDEVBR1toFw",
                        "properties": {
                            "addressPrefix": "10.1.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "AppToFw",
                        "properties": {
                            "addressPrefix": "10.4.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    },
                    {
                        "name": "HubToFw",
                        "properties": {
                            "addressPrefix": "10.3.0.0/16",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(parameters('azureFirewallName')).ipConfigurations[0].properties.privateIPAddress]"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2019-04-01",
            "type": "Microsoft.Network/azureFirewalls",
            "name": "[parameters('azureFirewallName')]",
            "location": "[resourceGroup().location]",
            "zones": "[if(equals(length(parameters('availabilityZones')), 0), json('null'), parameters('availabilityZones'))]",
            "dependsOn": [
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
                            },
                            "publicIPAddress": {
                                "id": "[variables('publicIpId')]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [
